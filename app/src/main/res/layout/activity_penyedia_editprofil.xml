<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aldy.papado.PenyediaEditprofilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="edit profil"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/penyedia_edit_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="edit foto" />

        <EditText
            android:id="@+id/penyedia_edit_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama venue..."
            android:text="Ini nama venue penyedia"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/penyedia_edit_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama pemilik..."
            android:text="Ini nama penyedia"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/penyedia_edit_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat..."
            android:text="Ini alamat penyedia"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/penyedia_edit_notelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor telepon..."
            android:text="Ini no telp penyedia"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/penyedia_edit_jambuka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jam buka..."
            android:text="Ini jam buka penyedia"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/penyedia_edit_jamtutup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jam tutup..."
            android:text="Ini jam tutup penyedia"
            android:textColorHint="@color/colorPrimary" />

        <Button
            android:id="@+id/penyedia_save_editprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="simpan"
            android:textColorHint="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>
